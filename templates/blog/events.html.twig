{% extends 'base.html.twig' %}
{% block body %}

<div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        {% for event in events %}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img src="{{ event.ImageCover }}" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-text">{{ event.Nom  }}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                        <a href="{{path('voirevent',{id:event.Id } )}}" class="btn btn-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">Voir les d√©tails</a>
                    </div>
                <small class="text-muted">{{event.Date | date('d/m/Y')}}</small>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  {% endblock %}